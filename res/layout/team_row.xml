<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/team"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:padding="8dp"
            android:text="TAKIM ADI"
            android:background="@drawable/my_border">
        </TextView>

        <TextView
            android:id="@+id/teamMatch"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:textSize="12dp"
            android:layout_toRightOf="@id/team"
            android:text="MAÃ‡"
            android:background="@drawable/my_border">
        </TextView>
        <TextView
            android:id="@+id/teamWin"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:textSize="12dp"
            android:layout_toRightOf="@id/teamMatch"
            android:text="W"
            android:background="@drawable/my_border">
        </TextView>

        <TextView
            android:id="@+id/teamDraw"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:textSize="12dp"
            android:layout_toRightOf="@id/teamWin"
            android:text="D"
            android:background="@drawable/my_border">
        </TextView>

        <TextView
            android:id="@+id/teamLose"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:layout_toRightOf="@id/teamDraw"
            android:text="L"
            android:background="@drawable/my_border">
        </TextView>

        <TextView
            android:id="@+id/teamPoint"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:textSize="12dp"
            android:layout_toRightOf="@id/teamLose"
            android:text="P"
            android:background="@drawable/my_border">
        </TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>