    <TextView
        android:id="@+id/deneme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DENEMEMEMEME">

    </TextView>
    -->
    <TextView
        android:id="@+id/team"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="TAKIM ADI"
        android:background="@drawable/my_border">
    </TextView>

    <TextView
        android:id="@+id/teamMatch"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:textSize="12dp"
        android:layout_toRightOf="@id/team"
        android:text="M"
        android:background="@drawable/my_border">
    </TextView>
    <TextView
        android:id="@+id/teamWin"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:textSize="12dp"
        android:layout_toRightOf="@id/teamMatch"
        android:text="W"
        android:background="@drawable/my_border">
    </TextView>

    <TextView
        android:id="@+id/teamDraw"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:textSize="12dp"
        android:layout_toRightOf="@id/teamWin"
        android:text="D"
        android:background="@drawable/my_border">
    </TextView>

    <TextView
        android:id="@+id/teamLose"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:layout_toRightOf="@id/teamDraw"
        android:text="L"
        android:background="@drawable/my_border">
    </TextView>

    <TextView
        android:id="@+id/teamPoint"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:textSize="12dp"
        android:layout_toRightOf="@id/teamLose"
        android:text="P"
        android:background="@drawable/my_border">
    </TextView>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/reycPuan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_below="@id/team"
    android:layout_marginLeft="3dp">

</androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>